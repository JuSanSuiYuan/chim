// 更复杂的测试用例

// 定义结构体
struct Person {
    name: string,
    age: int
}

// 定义函数
fn greet(person: Person) -> string {
    return "Hello, " + person.name + "! You are " + to_string(person.age) + " years old."
}

// 使用结构体和函数
let alice = Person {
    name: "Alice",
    age: 30
}

println(greet(alice))

// 测试类型检查
